<!--task: @taskとnew.htmlで書いているので form_with(model: task)と書くことができパーシャルの汎用性が増す-->
<%= form_with(model: task) do |f| %>
  <% if task.errors.any? %>
  
    <div id="error_explanation">
      <ul>
        <% task.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
 <% end %>
  <%= f.label :status, 'ステータス' %>
  <%= f.text_field :status %>
  <%= f.label :content, 'タスク' %>
  <%= f.text_field :content %>
  <%= f.submit '投稿' %>
 
